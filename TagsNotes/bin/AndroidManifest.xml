<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tagstables"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateNoteActivity"
            android:label="@string/title_activity_createote" >
        </activity>
        <activity
            android:name=".AllNotesActivity"
            android:label="@string/title_activity_all_notes" >
        </activity>
        <activity
            android:name=".AllHashActivity"
            android:label="@string/title_activity_all_hash" >
        </activity>
        <activity
            android:name=".AllMentionActivity"
            android:label="@string/title_activity_all_mention" >
        </activity>
        <activity
            android:name=".AllNotesbyHash"
            android:label="@string/title_activity_all_notesby_hash" >
        </activity>
        <activity
            android:name=".AllNotesByMention"
            android:label="@string/title_activity_all_notes_by_mention" >
        </activity>
         <activity
            android:name=".UpdateNoteActivity"
            android:label="@string/title_activity_all_notes_by_mention" >
        </activity>
    </application>

</manifest>